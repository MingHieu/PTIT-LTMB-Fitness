    <attr name="colorDiscoverScreenCardText" format="color" />
    <attr name="colorDiscoverScreenCardSurface" format="color" />
    <attr name="colorBodyAreaText" format="color" />
    <attr name="colorBodyAreaSurface" format="color" />
    <attr name="colorWorkoutPlanDetailActionBar" format="color" />
    <attr name="colorError" format="color" />
