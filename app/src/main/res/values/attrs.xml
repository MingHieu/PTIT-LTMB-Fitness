        <attr name="iv_enabled" format="boolean" />
        <attr name="iv_left_icon" format="reference" />
        <attr name="iv_left_icon_tint" format="reference" />
        <attr name="iv_right_icon" format="reference" />
        <attr name="iv_right_icon_tint" format="reference" />
        <attr name="iv_background" format="reference" />
        <attr name="android:hint" format="string" />
        <attr name="android:inputType" />
        <attr name="android:textColor" format="reference" />
        <attr name="android:textColorHint" format="reference" />
        <attr name="android:minLines" format="reference" />
        <attr name="android:textSize" format="reference" />
        <attr name="android:textStyle" format="reference" />
